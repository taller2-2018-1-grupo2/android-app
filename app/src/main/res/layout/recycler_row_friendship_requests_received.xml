<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp">

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/recycler_view_row_profile_pic"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/profile_placeholder"
        app:civ_border_width="0dp"
        app:civ_border_color="@color/primary_material_dark"/>

    <TextView
        android:id="@+id/full_name"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:paddingTop="6dp"
        android:textColor="@color/textPrimary"
        android:textSize="15sp"
        android:text="Gonzalo Merino"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/username"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/recycler_view_row_profile_pic"
        android:layout_centerHorizontal="true"
        android:paddingBottom="7dp"
        android:textSize="14sp"
        android:text="gmerino92"
        android:textStyle="italic" />

    <ImageView
        android:id="@+id/accept_friendship_request"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_weight="1"
        android:clickable="true"
        android:padding="2dp"
        app:srcCompat="@drawable/ic_add_direct_message" />


</RelativeLayout>