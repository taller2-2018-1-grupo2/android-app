<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!-- User info -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/stories_item_user_pic"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:contentDescription="Story image"
            android:scaleType="centerCrop"
            tools:src="@drawable/profile_placeholder" />

        <TextView
            android:id="@+id/stories_item_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:textColor="@color/textPrimary"
            android:textStyle="bold"
            tools:text="nanovazquez" />

        <TextView
            android:id="@+id/stories_item_title"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:textColor="@color/textPrimary"
            tools:text="Lorem ipsum dolor sit amet" />
    </LinearLayout>

    <!-- Story info -->

    <ImageView
        android:id="@+id/stories_item_fileUrl"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        tools:src="@drawable/profile_placeholder" />

    <TextView
        android:id="@+id/stories_item_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:maxHeight="70dp"
        android:textColor="@color/textPrimary"
        tools:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat." />

</LinearLayout>