<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:orientation="horizontal"
    android:padding="10dp">

    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/recycler_view_row_profile_pic"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:src="@drawable/profile_placeholder"
        app:civ_border_color="@color/primary_material_dark"
        app:civ_border_width="0dp" />

    <TextView
        android:id="@+id/full_name"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/recycler_view_row_profile_pic"
        android:layout_toEndOf="@+id/recycler_view_row_profile_pic"
        android:paddingLeft="4dp"
        android:textColor="@color/textPrimary"
        android:textSize="13sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/username"
        android:layout_width="160dp"
        android:layout_height="25dp"
        android:layout_below="@+id/full_name"
        android:layout_toEndOf="@+id/recycler_view_row_profile_pic"
        android:gravity="bottom"
        android:paddingLeft="4dp"
        android:textSize="13sp"
        android:textStyle="italic" />

    <ImageView
        android:id="@+id/profile_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/send_message"
        android:layout_weight="1"
        android:clickable="true"
        android:padding="2dp"
        app:srcCompat="@drawable/ic_profile" />

    <ImageView
        android:id="@+id/send_message"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/add_user"
        android:layout_weight="1"
        android:clickable="true"
        android:padding="2dp"
        app:srcCompat="@drawable/ic_menu_send" />

    <ImageView
        android:id="@+id/add_user"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_weight="1"
        android:clickable="true"
        android:padding="2dp"
        app:srcCompat="@android:drawable/ic_menu_add" />


</RelativeLayout>